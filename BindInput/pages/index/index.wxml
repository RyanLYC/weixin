<!--index.wxml-->
<view class="container">
  <view class="header">
    <image src="../../images/timg.jpg" mode="aspectFit"/>
  </view>
  <view class="inputs">
    <input 
      class="username" 
      placeholder="请输入用户名" 
      value="{{ username }}" 
      bindinput="inputChangeHandle" 
      data-prop="username"/>
    <input 
      class="password" 
      type="password" 
      placeholder="请输入密码" 
      value="{{ password }}" 
      bindinput="inputChangeHandle" 
      data-prop="password"/>
  </view>
  <view class="buttons">
    <button type="primary" bindtap="loginHandle">登陆</button>
    <button type="default">注册</button>
  </view>
</view>
